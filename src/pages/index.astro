---
import { getCollection } from 'astro:content';

// 1. Cargamos todos los posts y los ordenamos por fecha (el más nuevo primero)
const allPosts = await getCollection('blog');
const posts = allPosts.sort((a: any, b: any) => b.data.date.valueOf() - a.data.date.valueOf());

// 2. Elegimos el primero de la lista (el más reciente)
const lastPost = posts[0];

// 3. Preparamos la navegación (en el index, el "Siguiente" será nulo porque ya es el último)
const prevPost = posts[1]; // El segundo más nuevo es el "Anterior" respecto al primero
const { Content } = await lastPost.render();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>{lastPost.data.title}</title>
  </head>
  <body>
    <header class="barra-superior">
      <div class="header-contenido">
        <div class="usuario">
          <div class="avatar">LB</div>
          <div class="datos">
            <span class="nombre">Lluc Belvis Balsera</span>
            <span class="correo">llucbelvis@gmail.com</span>
          </div>
        </div>
        <nav class="menu-vacio">
          <span>Official Blog</span>
        </nav>
      </div>
    </header>
    <main class="contenedor-principal">
      <div class="controles-superiores">
        <div class="etiqueta-portada">Last Devlog</div>
        
        <nav class="navegacion-superior">
          {prevPost ? (
            <a href={`/blog/${prevPost.slug}`} class="nav-link">← Previous</a>
          ) : <span class="disabled">← Previous</span>} 
          
          <span class="separador">|</span>
          
          <span class="disabled">Next →</span> </nav>
      </div>

      <article>
        <h1>{lastPost.data.title}</h1>
        <p class="fecha">{lastPost.data.date.toLocaleDateString()}</p>
        <hr />
        <Content /> 
      </article>
    </main>
  </body>
</html>

